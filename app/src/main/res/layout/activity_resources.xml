<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/resourcesView"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="@color/bedazzledBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resourcesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resources"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/resourcesView"
        app:layout_constraintEnd_toEndOf="@+id/resourcesView"
        app:layout_constraintStart_toStartOf="@+id/resourcesView"
        app:layout_constraintTop_toTopOf="@+id/resourcesView" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/left_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/resourcesView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nationalSupportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/national_support_groups"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resourcesView" />

    <TextView
        android:id="@+id/ndssText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="@string/NDSS"
        android:textColor="#0645AD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nationalSupportText" />

    <TextView
        android:id="@+id/ndscText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/NDSC"
        android:textColor="#0645AD"
        app:layout_constraintStart_toStartOf="@+id/ndssText"
        app:layout_constraintTop_toBottomOf="@+id/ndssText" />

    <TextView
        android:id="@+id/dsdnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/DSDN"
        android:textColor="#0645AD"
        app:layout_constraintStart_toStartOf="@+id/ndscText"
        app:layout_constraintTop_toBottomOf="@+id/ndscText" />

</androidx.constraintlayout.widget.ConstraintLayout>